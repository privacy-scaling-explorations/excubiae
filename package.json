{
    "name": "excubiae",
    "description": "An on-chain flexible &amp; modular framework for implementing custom gatekeepers.",
    "license": "MIT",
    "repository": "git@github.com:privacy-scaling-explorations/excubiae.git",
    "homepage": "https://github.com/privacy-scaling-explorations/excubiae.git",
    "bugs": "https://github.com/privacy-scaling-explorations/excubiae/issues",
    "private": true,
    "packageManager": "yarn@4.5.0",
    "workspaces": [
        "apps/*",
        "packages/*",
        "packages/contracts/contracts"
    ],
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@types/node": "^22.5.5",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "changelogithub": "^0.13.10",
        "czg": "^1.9.4",
        "eslint": "^8.56.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react": "^7.34.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.0"
    },
    "scripts": {
        "build": "yarn build:docs && yarn build:website",
        "build:docs": "yarn workspace excubiae-docs build",
        "build:website": "yarn workspace excubiae-website build",
        "prepare": "husky",
        "format": "prettier -c . && yarn workspace excubiae-docs format",
        "format:write": "prettier -w . && yarn workspace excubiae-docs format:write",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "clean": "rimraf node_modules",
        "precommit": "lint-staged",
        "postinstall": "husky && git config --local core.editor cat"
    }
}
