{
    "compilerOptions": {
        "outDir": "out",
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": ["scripts/**/*", "tasks/**/*", "test/**/*", "ts/**/*", "ignition/**/*", "typechain-types/**/*"],
    "files": ["hardhat.config.ts"]
}
